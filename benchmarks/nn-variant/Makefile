CC=gcc
CXX=g++

BIN_NAME=variantcaller_wrapper

# Intel VTune Profiler
VTUNE_ANALYSIS=0

ifeq ($(VTUNE_ANALYSIS),1)
	INCLUDES+=$(VTUNE_INCLUDES)
	LDFLAGS+=$(VTUNE_LDFLAGS)
endif

# Fujitsu Advanced Profiler
FAPP_ANALYSIS=0

# Dynamorio
DYNAMORIO_ANALYSIS=0

ifeq ($(DYNAMORIO_ANALYSIS),1)
	INCLUDES+=$(DYNAMORIO_INCLUDES)
	LDFLAGS+=$(DYNAMORIO_LDFLAGS)
endif

# PWR
PWR=0

ifeq ($(PWR),1)
	INCLUDES+=$(PWR_INCLUDES)
	LDFLAGS+=$(PWR_LDFLAGS)
endif

CXXFLAGS=-std=c++11 -Wall -Wextra -O3 -DVTUNE_ANALYSIS=$(VTUNE_ANALYSIS) -DFAPP_ANALYSIS=$(FAPP_ANALYSIS) -DDYNAMORIO_ANALYSIS=$(DYNAMORIO_ANALYSIS) -DPWR=$(PWR)

$(BIN_NAME): variantcaller_wrapper.cpp
	$(CXX) $(INCLUDES) $(CXXFLAGS) variantcaller_wrapper.cpp $(LDFLAGS) -o $(BIN_NAME)

.PHONY: all
all: $(BIN_NAME)

.PHONY: clean
clean:
	rm -rf $(BIN_NAME)
