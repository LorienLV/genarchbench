###############################################################################
# Definitions
###############################################################################
FOLDER_ROOT=..

###############################################################################
# Modules
###############################################################################
MODULES=edit_bpm \
        edit_cigar
        
SRCS=$(addsuffix .c, $(MODULES))
OBJS=$(addprefix ../$(FOLDER_BUILD)/, $(SRCS:.c=.o))

###############################################################################
# Rules
###############################################################################
all: $(OBJS)

# General building rule
../$(FOLDER_BUILD)/%.o : %.c
	$(CC) $(CC_FLAGS) $(ARCH_FLAGS) -I$(FOLDER_ROOT) -c $< -o $@
	
